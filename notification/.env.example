# Notification Service Configuration

# Firebase Cloud Messaging (FCM) Settings
FCM_SERVICE_ACCOUNT_KEY_PATH=/path/to/your/firebase-service-account-key.json

# Apple Push Notification Service (APNs) Settings
APNS_TEAM_ID=your_apple_team_id
APNS_KEY_ID=your_apns_key_id
APNS_KEY_PATH=/path/to/your/apns_key.p8
APNS_BUNDLE_ID=com.yourcompany.yourapp
APNS_USE_SANDBOX=True

# SMS Service Settings (SparrowSMS)
SPARROWSMS_API_KEY=your_sparrowsms_api_key
SPARROWSMS_SENDER_ID=your_sender_id
SPARROWSMS_ENDPOINT=https://api.sparrowsms.com/v2/sms/

# Email Settings (already configured with SendGrid in main settings)
# SENDGRID_API_KEY=your_sendgrid_api_key

# Notification System Settings
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_RETRY_DELAY=300
NOTIFICATION_MAX_RETRIES=3
NOTIFICATION_CLEANUP_DAYS=30
